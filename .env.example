# AI News Digest Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME="AI News Digest"
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Database
# =============================================================================
# SQLite (default, good for development)
DATABASE_URL=sqlite+aiosqlite:///./news_digest.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/news_digest

# =============================================================================
# AI Provider Configuration
# =============================================================================
# Choose your AI provider: "anthropic" or "openai"
AI_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# =============================================================================
# News API
# =============================================================================
# Get your free API key at https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key

# =============================================================================
# Email (Resend)
# =============================================================================
# Get your API key at https://resend.com/
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM_ADDRESS=digest@yourdomain.com
EMAIL_FROM_NAME="AI News Digest"

# =============================================================================
# Scheduling Defaults
# =============================================================================
DEFAULT_DIGEST_HOUR=8
DEFAULT_DIGEST_MINUTE=0
DEFAULT_TIMEZONE=UTC

# =============================================================================
# Limits
# =============================================================================
MAX_TOPICS_PER_USER=5
MAX_ARTICLES_PER_TOPIC=10
SUMMARY_MAX_LENGTH=500
